extends layout

block content
    div.container
        form.form-signin(method="post")
            h2.form-singin-heading= "Edit Employee"
            input(name="_id", type="hidden", value=employee._id.toHexString())
            input.form-control(type="text", name="title", id="editEmployeeTitle", placeholder="Title", value=[title], autofocus)
            input.form-control(type="text", name="name", id="editEmployeeName", placeholder="Name", value=employee.name)
            input(type="submit", value="Update", class="btn btn-lg btn-primary btn-block")
            br
            a(href="/")!= "Back to Employee List"
